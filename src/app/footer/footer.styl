/*- ⭐️ Footer Style
 *
 *
-*/

@import '../styleguide/container'

footer() {
  container()
  container-responsive()

  background: $gray-orkshon;
  bottom: 0;
  color: $white-base;
  cursor: default;
  position: relative;
  text-align: right;
  width: 100%;

  &, a { font-size: $font-size-small; }

  .footer {
    &__github-repo {
      color: $white-base;
      font-weight: $font-weight-bold;

      &:hover { text-decoration: underline; }
    }
  }

  a { color: $blue-action; }
}

footer-responsive() {
  +mq-medium-up() {
    &, a { font-size: $font-size-base; }
  }
}
