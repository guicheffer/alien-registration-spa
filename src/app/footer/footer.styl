@import '../styleguide/container'

footer() {
  container()
  container-responsive()

  background: $gray-orkshon;
  bottom: 0;
  color: $white-base;
  cursor: default;
  position: fixed;
  text-align: right;
  width: 100%;

  .footer {
    &__github-repo {
      color: $white-base;
      font-weight: $font-weight-bold;

      &:hover { text-decoration: underline; }
    }
  }

  a { color: $blue-action; }
}

footer-responsive() {}
