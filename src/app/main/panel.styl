/*- ⭐️ Panel style
 *
 * Our main panel styles and guider
 *
-*/

@import 'container';
@import 'spacing';

@import '../main/add-new'
@import '../main/list'

panel() {
  display: flex;
  height: 'calc(90vh - %s)' % $spacing-xxlarge;
  justify-content: space-around;
  width: 100%;

  .panel {
    &__content {
      background: $gray-xcviu;
      border-radius: $spacing-base;
      box-shadow: $spacing-xxsmall $spacing-xxsmall $spacing-xxxlarge $spacing-base $gray-cvoiw;
      display: flex;
      flex-direction: column;
      flex-wrap: wrap;
      justify-content: flex-start;
      margin-top: $spacing-xxlarge;
      padding: $spacing-large;
    }

    &__homepage {
      .panel__add-new {
        flex: 1;
        margin-left: $spacing-large;
      }
    }

    &__add-new {
      add-new();
      add-new-responsive();
    }

    &__list {
      list();
      list-responsive();
    }
  }
}

panel-responsive() {
  +mq-large-up() {
    align-items: center;
    justify-content: center;

    .panel {
      &__content {
        $min-width = 930px;

        box-sizing: content-box;
        flex-direction: row;
        justify-content: space-between;
        min-width: $min-width;
        width: 50%;
      }
    }
  }
}
