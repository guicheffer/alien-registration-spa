/*- ⭐️ Panel style
 *
 * Our main panel styles and guider
 *
-*/

@import 'container';
@import 'spacing';

panel() {
  display: flex;
  height: 'calc(90vh - %s)' % $spacing-xxlarge;
  justify-content: space-around;
  width: 90vw;

  .panel {
    &__content {
      display: flex;
      flex-direction: column-reverse;
      flex-wrap: wrap;
      justify-content: flex-start;
    }
  }
}

panel-responsive() {
  +mq-medium-up() {
    align-items: center;
    justify-content: center;

    .panel {
      &__content {
        box-sizing: content-box;
        flex-direction: row;
        justify-content: space-between;
        padding: $spacing-small;
        width: 50%;
      }
    }
  }
}
