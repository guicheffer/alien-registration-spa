@import 'container';
@import 'spacing';

add-new() {
  .add-new {
    &__label {
      display: block;
      font-weight: $font-weight-bold;

      &::before { content: 'üëáüèº'; }
    }

    &__field {
      align-items: center;
      display: flex;
      margin: $spacing-xsmall 0 0;
    }

    &__input {
      background: $white-sdfoi;
      border-radius: $spacing-xxsmall;
      border: 0;
      color: $white-base;
      outline: none;
      padding: $spacing-xxsmall $spacing-xsmall;
    }

    &__species {
      display: flex;
      flex: 1;
      justify-content: space-around;
    }

    &__specie {
      label {
        cursor: pointer;
        opacity: 0.4;
        transition: opacity .2s ease-in-out;
        will-change: opacity;

        &:hover { opacity: 0.6; }
      }

      [type=checkbox] {
        display: none;

        &:checked + label { opacity: 1; }
      }
    }

    &__go {
      background: $white-base;
      border-radius: $spacing-small;
      border: 0;
      font-size: $font-size-small;
      margin: 0 $spacing-small 0;
      outline: 0;
      padding: $spacing-xxsmall $spacing-base;
      text-transform: uppercase;
      transition: background .2s linear, color .2s linear;
      will-change: background, color;

      &:not([disabled]) {
        cursor: pointer;

        &:hover {
          background: $black-base;
          color: $white-base;
        }
      }

      &[disabled] { background: $gray-disabled; }
    }
  }
}

