@import 'reset';

@import 'palette';
@import 'typography';

@import 'layout';

@import '../header/header';
@import '../footer/footer';

font-face-normal()
font-face-bold()

::selection {
  background: $color-primary;
  color: $white-base;
}

body {
  -moz-osx-font-smoothing: grayscale;
  -webkit-font-smoothing: antialiased;
  background: $color-primary;
  background-position: 50% 50%;
  background-size: 100%;
  color: $white-base;
  line-height: $font-size-base + $spacing-xsmall;
}

body, input, a {
  font-family: 'Mukta', Helvetica, sans-serif;
  font-size: $font-size-base;
  font-style: normal;
  font-weight: $font-weight-normal;
  text-decoration: none;
}

.alien-registration {
  alien-registration-layout();
  alien-registration-layout-responsive();

  &__header {
    header();
    header-responsive();
  }

  // INVOLVE
  &__wrapper {
    display: flex;
    flex-direction: column;
    outline: 1px dotted;
    padding: $spacing-small;
  }

  &__sidebar,
  &__panel {
    border: 1px solid $white-base;
    margin: $spacing-large;
    padding: $spacing-large;
  }

  &__sidebar {
    a {
      color: green;
      font-weight: $font-weight-bold;
    }
  }

  &__panel {
    .panel {

      // add new
      &__add-new {
        label {
          display: block;
          cursor: default;
          user-select: none;
        }

        .add-new {
          &__species {
            display: inline-flex;
            flex-direction: row;
            justify-content: space-around;
            vertical-align: middle;

            li {
              text-align: center;
              margin: 0 $spacing-base;
            }
          }
        }
      }

      // list
      &__list {
        border: 1px solid $white-base;
        margin: $spacing-small 0 $spacin-xxsmall;

        th { width: 90px; }

        th, td:not(:first-child) { text-align: center; }
        th, td { outline: 1px dotted $white-base; }

        td { padding: $spacing-xsmall 0; }

        thead > tr:first-child {
          background: $black-base;
          color: $white-base;
        }

        tr:nth-child(odd) {
          background: $white-base;
          color: $black-base;
          outline: 1px dotted $black-base;
        }
      }
    }
  }

  +mq-large-up() {
    &__wrapper {
      flex-direction: row;
    }
  }
  // /INVOLVE

  &__footer {
    footer();
    footer-responsive();
  }
}
